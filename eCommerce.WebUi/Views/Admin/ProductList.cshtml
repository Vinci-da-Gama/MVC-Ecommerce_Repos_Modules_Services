@model IEnumerable<eCommerce.Models.Product>

@{
    ViewBag.Title = "Product-List";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "CreateNewProduct")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CostPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CostPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditProduct", new { pId = item.ProductId }) &#10073;
            @Html.ActionLink("Details", "ProductDetails", new { Pid=item.ProductId }) &#10073;
            @Html.ActionLink("Delete", "ProductDelete", new { Pid = item.ProductId })
        </td>
    </tr>
}

</table>
