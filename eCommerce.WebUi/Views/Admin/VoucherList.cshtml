@model IEnumerable<eCommerce.Models.Voucher>

@{
    ViewBag.Title = "Voucher-List";
}

<h2>VoucherList</h2>

<p>
    @Html.ActionLink("Create New Voucher", "CreateNewVoucher")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VoucherCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VoucherTypeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VoucherDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppliesToProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinSpend)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.multipleUse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignedTo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VoucherCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VoucherTypeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VoucherDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AppliesToProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinSpend)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.multipleUse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssignedTo)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditVoucher", new { Vid = item.VoucherId }) |
            @Html.ActionLink("Details", "VoucherDetails", new { Vid = item.VoucherId }) |
            @Html.ActionLink("Delete", "DeleteVoucher", new { Vid = item.VoucherId })
        </td>
    </tr>
}

</table>
